generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Simplified schema focusing on enhancements, not duplicating on-chain data

model User {
  id              String   @id @default(cuid())
  walletAddress   String   @unique
  
  // OFF-CHAIN ONLY enhancements
  username        String?
  email           String?
  notificationSettings Json?
  preferences     Json?
  
   // NEW: NextAuth + Discord fields
  name            String?   // NextAuth standard field
  emailVerified   DateTime?
  image           String?
  discordId       String?  @unique  // Store Discord user ID
  
  // NextAuth relations
  accounts        Account[]
  sessions        Session[]

  createdAt       DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String  // This will store the Discord user ID
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth Verification Token model (for email verification, etc.)
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CampaignCache {
  id              String   @id @default(cuid())
  campaignId      Int      // Reference to on-chain campaign ID
  contractAddress String
  
  // CACHED data for performance (synced from blockchain)
  title           String
  description     String
  hostAddress     String
  isActive        Boolean
  
  // OFF-CHAIN enhancements
  imageUrl        String?
  tags            String[]
  featuredUntil   DateTime?
  
  lastSyncedAt    DateTime @default(now())
}

model SocialVerification {
  id              String   @id @default(cuid())
  userAddress     String
  taskId          String   // On-chain task reference
  platform        String   // twitter, discord, etc.
  
  // Verification proof (off-chain)
  proofData       Json
  verifiedAt      DateTime?
  isValid         Boolean  @default(false)
}

model Analytics {
  id              String   @id @default(cuid())
  eventType       String
  userAddress     String?
  campaignId      Int?     // On-chain campaign ID reference
  
  data            Json
  timestamp       DateTime @default(now())
}